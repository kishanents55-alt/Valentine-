  </div>  <script>
    const valentineDate = new Date(new Date().getFullYear(), 1, 14);
    const countdownEl = document.getElementById('countdown');

    function updateCountdown() {
      const now = new Date();
      const diff = valentineDate - now;
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      countdownEl.innerHTML = days >= 0 ? `â³ ${days} days until Valentineâ€™s Day` : 'ğŸ’˜ Happy Valentineâ€™s Day!';
    }
    setInterval(updateCountdown, 1000);
    updateCountdown();

    function showLove() {
      document.getElementById('secret').style.display = 'block';
      createHearts();
    }
    function yesClicked() {
      document.getElementById('answer').style.display = 'block';
      document.getElementById('answer').innerHTML = 'Yayyy ğŸ˜ I choose you. Always and forever ğŸ’˜';
      createHearts();
    }
    function noClicked() {
      document.getElementById('answer').style.display = 'block';
      document.getElementById('answer').innerHTML = 'Nice try ğŸ˜ Youâ€™re still my Valentine forever ğŸ’•';
      createHearts();
    }
    function createHearts() {
      for (let i = 0; i < 12; i++) {
        const heart = document.createElement('div');
        heart.className = 'heart';
        heart.innerHTML = 'â¤ï¸';
        heart.style.left = Math.random() * 100 + 'vw';
        heart.style.bottom = '0px';
        heart.style.fontSize = (Math.random() * 20 + 15) + 'px';
        document.body.appendChild(heart);
        setTimeout(() => heart.remove(), 4000);
      }
    }
